@model IEnumerable<InventarioViewModel>

@{
	ViewData["Title"] = "Inventario";
}
<h2>@ViewBag.Title</h2>
<a asp-action="Create" class="btn btn-secondary bg-primary-site"><i class="bi bi-plus"></i>Nuevo</a>
<table class="table">
	<thead>
		<tr>
			<th>Opciones</th>
			<th>Código</th>
			<th>Forma registro</th>
			<th># Documento</th>
			<th>Departamento</th>
			<th>Categoría</th>
			<th>Linea de servicio</th>
			<th>Sub-línea</th>
			<th>Fecha de compra</th>
			<th>Valor sin IVA</th>
			<th>Proveedor</th>
			<th>Producto</th>
			<th>Descrip. específica</th>
			<th>Especifi. técnicas</th>
			<th># fabricante</th>
			<th># serie LPS</th>
			<th>Ubicación</th>
			<th>Estatus</th>
			<th>Clasificación</th>
			<th>Novedades</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="ps-4 pe-5">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light px-2 py-1"><i class="bi bi-pencil-square"></i></a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger px-2 py-1"><i class="bi bi-trash"></i></a>
				</td>
				<td>@item.CodigoItem</td>
				<td>@item.FormaRegistro</td>
				<td>@item.NumeroDocumento</td>
				<td>@item.Departamento</td>
				<td>@item.Categoria</td>
				<td>@item.LineaServicio</td>
				<td>@item.SubLineaServicio</td>
				<td>@item.FechaCompra</td>
				<td>@item.ValorSinIva</td>
				<td>@item.Proveedor</td>
				<td>@item.Producto</td>
				<td>@item.DescripcionEspecifica</td>
				<td>@item.EspecificacionesTecnicas</td>
				<td>@item.NumeroParteFabricante</td>
				<td>@item.NumeroSerieLps</td>
				<td>@item.Ubicacion</td>
				<td>@item.Estatus</td>
				<td>@item.Clasificacion</td>
				<td><a asp-controller="NovedadesItem" asp-action="Index" asp-route-id="@item.Id" class="btn btn-light px-2 py-1"><i class="bi bi-eye"></i>Ver Novedades</a></td>
			</tr>
		}
	</tbody>


</table>